{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "clang build active file",
            "type": "shell",
            "command": "/usr/bin/clang",
            "args": [
                "-g",
                "${workspaceFolder}/hello.c",
                "-o",
                "${workspaceFolder}/hello.o"    
            ],
            "options": {
                "cwd": "/usr/bin"
            },
            "problemMatcher":[
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}